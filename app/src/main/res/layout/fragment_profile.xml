<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">


        <TextView
            android:id="@+id/titleProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Upravljaj profilom"
            android:textSize="34sp"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/user"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal"
            android:textSize="22sp"
            android:textColor="#333333"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Name (non-editable) -->
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ime i prezime"
            android:textSize="22sp"
            android:textColor="#666666"
            android:padding="12dp"
            android:background="@drawable/textview_bkg"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/montserrat_regular" />

        <!-- Gender Spinner -->
        <Spinner
            android:id="@+id/genderSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_bkg"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:spinnerMode="dropdown"
            android:fontFamily="@font/montserrat_regular" />

        <!-- Age Input -->
        <EditText
            android:id="@+id/ageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Starosna dob"
            android:background="@drawable/textview_bkg"
            android:padding="12dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/montserrat_regular" />

        <!-- Additional Information Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Information"
            android:textSize="22sp"
            android:textColor="#333333"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginBottom="16dp" />

        <!-- Weight Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/kilaza"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/kilaza"
                android:background="@drawable/edittext_bkg"
                android:layout_marginEnd="10dp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kg"
                android:textColor="#888888"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="22sp" />
        </LinearLayout>

        <!-- Height Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/visina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/visina"
                android:background="@drawable/edittext_bkg"
                android:layout_marginEnd="10dp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/m"
                android:textColor="#888888"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="22sp" />
        </LinearLayout>

        <!-- Disease and Allergy Inputs -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bolesti"
            android:textSize="22sp"
            android:textColor="#333333"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/bolesti"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/edittext_bkg"
            android:layout_marginEnd="20dp"
            android:hint="@string/unesite_bolesti"
            android:padding="12dp"
            android:gravity="top"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:fontFamily="@font/montserrat_regular"
            android:inputType="textMultiLine"
            android:layout_marginBottom="32dp"
            android:scrollbars="vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alergije"
            android:textSize="22sp"
            android:textColor="#333333"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/alergije"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/edittext_bkg"
            android:layout_marginEnd="20dp"
            android:hint="@string/unesite_alergije"
            android:padding="12dp"
            android:gravity="top"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:fontFamily="@font/montserrat_regular"
            android:inputType="textMultiLine"
            android:layout_marginBottom="32dp"
            android:scrollbars="vertical" />

        <!-- Meals Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jela_u_danu"
            android:textSize="22sp"
            android:textColor="#333333"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginBottom="24dp" />

        <!-- Increment/Decrement Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Removed duplicated TextView here -->

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="56dp"
                android:background="@drawable/number_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginBottom="24dp">

                <ImageButton
                    android:id="@+id/decrementButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside"
                    android:src="@drawable/minus"
                    app:tint="@color/primary"
                     />

                <TextView
                    android:id="@+id/numberDisplay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <ImageButton
                    android:id="@+id/incrementButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside"
                    android:src="@drawable/plus"
                    app:tint="@color/primary"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Obavezno uključi"
                android:textSize="16sp"
                android:textColor="#333333"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginBottom="16dp" />

            <!-- Switches for Meals -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchDorucak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Doručak"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        app:switchMinWidth="56dp"
                        app:thumbTint="@drawable/thumb_color"
                        app:trackTint="@drawable/track_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchRucak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Ručak"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        app:switchMinWidth="56dp"
                        app:thumbTint="@drawable/thumb_color"
                        app:trackTint="@drawable/track_color" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchVecera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Večera"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        app:switchMinWidth="56dp"
                        app:thumbTint="@drawable/thumb_color"
                        app:trackTint="@drawable/track_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchUzina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Užina"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        app:switchMinWidth="56dp"
                        app:thumbTint="@drawable/thumb_color"
                        app:trackTint="@drawable/track_color" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Categories Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odaberi kategorije"
            android:textSize="22sp"
            android:textColor="#333333"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginBottom="24dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="4"
            tools:listitem="@layout/item_category" />
    </LinearLayout>
</ScrollView>
